                        /Card

                        Card padding=12
                            Vertical gap=8
                                Image "project-2.png"
                                Label "**Mobile App UI**"
                                Label "Updated 1 week ago"
                                Progress value=60
                            /Vertical
                        /Card

                        Card padding=12
                            Vertical gap=8
                                Image "project-3.png"
                                Label "**Dashboard Analytics**"
                                Label "Updated 3 weeks ago"
                                Progress value=100
                            /Vertical
                        /Card
                    /Horizontal
                /Vertical
            /Vertical
        /Card

        Separator

        Horizontal gap=16
            Panel padding=12
                Vertical gap=8
                    Label "**Notifications**"
                    Vertical gap=4
                        Toast "New comment on your design" type=info
                        Toast "Project deadline tomorrow" type=warning
                        Toast "Design approved!" type=success
                    /Vertical
                /Vertical
            /Panel

            Panel padding=12
                Vertical gap=8
                    Label "**Quick Stats**"
                    Horizontal gap=16
                        Vertical gap=2
                            Label "**142**"
                            Label "Projects"
                        /Vertical
                        Vertical gap=2
                            Label "**38**"
                            Label "Clients"
                        /Vertical
                        Vertical gap=2
                            Label "**4.9**"
                            Label "Rating"
                        /Vertical
                    /Horizontal
                /Vertical
            /Panel
        /Horizontal
