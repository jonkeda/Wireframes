{
  "name": "wireframe-vscode",
  "version": "0.0.3",
  "description": "VS Code extension for Wireframe preview and editing",
  "publisher": "jonkeda",
  "license": "MIT",
  "displayName": "Wireframe - UI Mockup DSL",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Visualization"
  ],
  "keywords": [
    "wireframe",
    "mockup",
    "ui",
    "prototype",
    "diagram"
  ],
  "activationEvents": [
    "onLanguage:wireframe"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "wireframe",
        "aliases": [
          "Wireframe",
          "Wire",
          "wire"
        ],
        "extensions": [
          ".wire",
          ".wireframe"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "wireframe",
        "scopeName": "source.wireframe",
        "path": "./syntaxes/wireframe.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "wireframe.preview",
        "title": "Wireframe: Open Preview",
        "icon": "$(preview)"
      },
      {
        "command": "wireframe.exportSvg",
        "title": "Wireframe: Export to SVG",
        "icon": "$(export)"
      },
      {
        "command": "wireframe.exportPng",
        "title": "Wireframe: Export to PNG"
      },
      {
        "command": "wireframe.validate",
        "title": "Wireframe: Validate Document"
      },
      {
        "command": "wireframe.insertSnippet",
        "title": "Wireframe: Insert Snippet"
      },
      {
        "command": "wireframe.changeTheme",
        "title": "Wireframe: Change Theme"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "wireframe.preview",
          "when": "resourceLangId == wireframe",
          "group": "navigation"
        },
        {
          "command": "wireframe.exportSvg",
          "when": "resourceLangId == wireframe",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "wireframe.preview",
          "when": "resourceLangId == wireframe",
          "group": "wireframe"
        },
        {
          "command": "wireframe.validate",
          "when": "resourceLangId == wireframe",
          "group": "wireframe"
        }
      ]
    },
    "keybindings": [
      {
        "command": "wireframe.preview",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "resourceLangId == wireframe"
      }
    ],
    "configuration": {
      "title": "Wireframe",
      "properties": {
        "wireframe.defaultTheme": {
          "type": "string",
          "default": "clean",
          "enum": [
            "clean",
            "sketch",
            "blueprint",
            "realistic"
          ],
          "description": "Default theme for wireframe preview"
        },
        "wireframe.previewWidth": {
          "type": "number",
          "default": 800,
          "description": "Default width for wireframe preview"
        },
        "wireframe.previewHeight": {
          "type": "number",
          "default": 600,
          "description": "Default height for wireframe preview"
        },
        "wireframe.autoPreview": {
          "type": "boolean",
          "default": false,
          "description": "Automatically open preview when opening a .wire file"
        },
        "wireframe.validateOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Validate wireframe documents on save"
        }
      }
    },
    "snippets": [
      {
        "language": "wireframe",
        "path": "./snippets/wireframe.json"
      }
    ]
  },
  "scripts": {
    "build": "node esbuild.js",
    "build:prod": "node esbuild.js --production",
    "watch": "node esbuild.js --watch",
    "compile": "tsc -p tsconfig.build.json",
    "package": "npm run build:prod && vsce package --no-dependencies --allow-missing-repository"
  },
  "dependencies": {
    "@jonkeda/wireframe-core": "workspace:*"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.27.2"
  }
}
